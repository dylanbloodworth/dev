#!/usr/bin/env bash

# Desktop Ecosystem
sudo pacman -S --noconfirm --needed brightnessctl libnotify ttf-jetbrains-mono-nerd otf-font-awesome 
sudo pacman -S --noconfirm --needed bluez bluez-utils bluetui

